<div class = "container">
<h1 align="center">Rubros - Editar</h1>
<br>
<br>
<%= form_with scope: @dato, url: rubros_actualizar_path, method: :PUT do |f| %>    
    <%= f.hidden_field  :id%>   
 <p>
 <label>Nombre</label> <br>
 <%= f.text_field :nombre, class: "form-control"%>
 </p>
 <p>
 <label>Perecedero</label> <br>
 <%= f.check_box :perecedero%>
 </p>
 <%= f.submit "Enviar", disable_with: 'Submiting...' , class: "btn btn-primary" %>
<% end %>
